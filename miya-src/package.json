{
  "name": "miya",
  "version": "0.7.0",
  "description": "Miya agent-team orchestration plugin for OpenCode",
  "main": "src/index.ts",
  "types": "dist/index.d.ts",
  "bin": {
    "miya": "./dist/cli/index.js"
  },
  "type": "module",
  "license": "MIT",
  "keywords": [
    "opencode",
    "opencode-plugin",
    "ai",
    "agents",
    "orchestration",
    "llm",
    "claude",
    "gpt",
    "gemini"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mmy4shadow/miya-for-opencode.git"
  },
  "bugs": {
    "url": "https://github.com/mmy4shadow/miya-for-opencode/issues"
  },
  "homepage": "https://github.com/mmy4shadow/miya-for-opencode#readme",
  "files": [
    "dist",
    "src/skills",
    "tools/miya-dock",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && bun build src/cli/index.ts --outdir dist/cli --target bun --format esm && bun build src/cli/gateway-supervisor.ts --outfile dist/cli/gateway-supervisor.node.js --target node --format esm && bun build src/cli/gateway-worker.ts --outfile dist/cli/gateway-worker.node.js --target node --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test --timeout 30000",
    "test:unit": "bun test test/unit/ --timeout 5000",
    "test:integration": "MIYA_RUN_INTEGRATION=1 bun test test/integration/ --timeout 30000",
    "test:regression": "bun test test/regression/ --timeout 30000",
    "test:adversarial": "bun test test/adversarial/ --timeout 30000",
    "test:performance": "bun test test/performance/ --timeout 60000",
    "test:e2e": "bun test test/e2e/ --timeout 60000",
    "test:ui": "bun run --cwd gateway-ui test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage --coverage-reporter=text --coverage-reporter=lcov",
    "test:coverage:core": "bun test --coverage --coverage-reporter=text --coverage-reporter=lcov test/unit/ src/gateway src/channels src/safety src/policy",
    "test:ci": "bun test --timeout 30000 --coverage --coverage-reporter=text",
    "test:integration:report": "bun run tools/run-integration-suite.ts",
    "benchmark:memory-recall": "bun run tools/memory-recall-benchmark.ts",
    "audit:report": "bun run tools/audit-report-generator.ts",
    "baseline:refresh": "bun run tools/interface-baseline.ts --write",
    "check:contracts": "bun run tools/hook-contract-check.ts",
    "check:no-regression": "bun run tools/no-regression-gate.ts",
    "doc:lint": "bun run tools/doc-lint.ts",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check --write .",
    "check:ci": "bun run check:contracts && bun run doc:lint && bun run check:no-regression && biome lint .",
    "dev": "bun run build && opencode",
    "prepublishOnly": "bun run build",
    "release:patch": "npm version patch && git push --follow-tags && npm publish",
    "release:minor": "npm version minor && git push --follow-tags && npm publish",
    "release:major": "npm version major && git push --follow-tags && npm publish"
  },
  "dependencies": {
    "@ast-grep/cli": "^0.40.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@opencode-ai/plugin": "^1.1.56",
    "@opencode-ai/sdk": "^1.1.56",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver-protocol": "^3.17.5",
    "ws": "^8.18.3",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "@biomejs/biome": "2.3.11",
    "bun-types": "latest",
    "typescript": "^5.7.3"
  },
  "trustedDependencies": [
    "@ast-grep/cli"
  ]
}
